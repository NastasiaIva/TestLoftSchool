/*---Styles for content of main-page----*/
.main-content
	background url('../images/background.png') repeat 0 0
	/*background linear-gradient(45deg, #EECFBA, #C5DDE8)*/
	display table-row
	font-size 18px
	height 100%
	line-height 18px
	z-index 11
	&__wrapper
		display flex
		margin-left auto
		margin-right auto
		max-width 1024px
		padding-bottom 35px
		padding-top 35px
		position relative
		width 100%
		@media only screen and (max-width: 1024px)
			width 95%
			flex-direction column
		@media only screen and (max-width: 768px)
			width 93%
			flex-direction column-reverse
		@media only screen and (max-width: 480px)
			padding-bottom 20px
			padding-top 20px
		.sidebar
			margin-right 4%
			width 26%
			@media only screen and (max-width: 1024px)
				margin-right 0
				width 100%
			@media only screen and (max-width: 768px)
				flex-direction column-reverse
				align-items flex-end
			@media only screen and (max-width: 480px)
				margin-bottom 25px
		.content-page
			width 70%
			@media only screen and (max-width: 1024px)
				width 100%
			@media only screen and (max-width: 768px)
				margin-bottom 25px
		.content-icons
			display none
			justify-content center
			min-height 60px
			@media only screen and (max-width: 480px)
				display flex
		.cat
			position absolute
			bottom 10px
			left 20px
			display inline-block
			width 140px
			height 200px
			z-index 11
			@media only screen and (max-width: 768px)
				display none
/*---Styles elements for block of about-me----*/
.sidebar
	&__navigation
		display inline-block
		border-radius 5px
		overflow hidden
		background radial-gradient(circle farthest-corner at 100px 50px, #fff, #dff7ec)
		margin-bottom 25px
		box-shadow 1px 3px 5px rgba(0, 0, 0, .3), -1px -1px 5px rgba(0, 0, 0, .3)
		@media only screen and (max-width: 1024px)
			width 49%
			margin-right 5%
		@media only screen and (max-width: 768px)
			display none
			background-color #fbfcfd
			box-shadow .6px 2.9px 8.5px .5px rgba(13, 16, 7, .35)
			width 238px
			margin-right 0
			position absolute
			top -26px
			right -26px
			z-index 11
		@media only screen and (max-width: 480px)
			left 0
			right 0
			top 0
			width 100%
			text-align center
		.navigation-menu
			z-index 111
	&__address
		margin-bottom 25px
		box-shadow 3px 3px 25px rgba(0, 0, 0, .3)
		display inline-block
		vertical-align top
		border-radius 5px
		overflow hidden
		@media only screen and (max-width: 1024px)
			width 45%
		@media only screen and (max-width: 768px)
			width 100%
			margin-bottom 0
		.address-list
			width 100%
			@media only screen and (max-width: 768px)
				display flex
			@media only screen and (max-width: 640px)
				flex-direction column
/*---Styles elements for navigation-menu----*/
.navigation-menu
	&:before
		content none
		@media only screen and (max-width: 768px)
			content ''
			position absolute
			right 26px
			top -24px
			border 12px solid transparent
			border-bottom 12px solid #3ba8c0
		@media only screen and (max-width: 480px)
			content none
	&__item
		cursor pointer
		display inline-block
		line-height 73px
		padding-left 10px
		padding-right 10px
		position relative
		width 100%
		@media only screen and (max-width: 480px)
			line-height 41px
		&.active
			background-color #3ba8c0
			cursor default
			.item-link
				color #fff
			&:hover .item-link
				color #fff
/*---Styles elements for address-list----*/
.address-list
	&__item
		cursor pointer
		display inline-block
		line-height 40px
		padding-left 20px
		padding-right 10px
		width 100%
		@media only screen and (max-width: 768px)
			&:after
				content none
		@media only screen and (max-width: 640px)
			text-align center
			padding-left 10px
			&:after
				content ''
		&:last-child
			&:after
				content none
	&__main-item
		background-color #3ba8c0
		color #fff
		@media only screen and (max-width: 768px)
			display none
	&__mail-item
		background-color #41b9d4
		.address-link__inner:before
			background url('../images/mail.png') no-repeat center
	&__phone-item
		background-color #48cbe8
		.address-link__inner:before
			background url('../images/phone.png') no-repeat center
	&__skype-item
		background-color #51daf8
		.address-link__inner:before
			background url('../images/skype.png') no-repeat center
/*---Styles elements for items of content-menu----*/
.navigation-menu__item
	&:after
		width 100%
		height 2px
		position absolute
		left 0
		bottom 0
		content ''
		background-color #1c667a
		background-image linear-gradient(to right, rgba(28, 102, 122, .9) 0, rgba(246, 250, 254, .9) 0, rgba(216, 216, 216, .9) 0, rgba(242, 246, 250, .9) 0, rgba(28, 102, 122, .9) 48%, rgba(242, 246, 250, .9) 100%)
	&:last-child:after
		content none
	.item-link
		color #959aa8
		display inline-block
		padding-left 10px
		padding-right 10px
		width 100%
		&__inner
			display inline-block
			line-height 18px
			vertical-align middle
			@media only screen and (max-width: 480px)
				font-size 24px
				line-height 24px
	&:hover
		.item-link
			color #3ba8c0
/*---Styles elements for items of address-list----*/
