/*---Styles elements for items of contacts-form----*/
.contacts-form
	.success-mes, .error-mes
		display block
		width 100%
	&__item
		width 45%
		margin-bottom 15px
		border none
		position relative
		.contacts-label
			display block
			color #959aa8
			line-height 22px
			text-align left
			position absolute
			pointer-events none
			top 5px
			left 10px
			font-size 16px
			opacity 0
			transition .2s ease-in-out
		.contacts-input
			background-color #fbfcfd
			border 1px solid #48cbe8
			border-radius 5px
			padding 10px
			line-height 21px
			font-size 15px
			color #48cbe8
			width 100%
			margin-top 30px
			overflow hidden
			&::-webkit-input-placeholder
				color #48cbe8
				font-size 14px
				line-height 14px
				font-family 'DecimaNovaPro', sans-serif
			&:focus::-webkit-input-placeholder
				opacity 0
		.has-error
			background-color rgba(249, 126, 118, .33)
			border 1px solid #f97e76
		.contacts-input:valid + .contacts-label
			opacity 1
			top -5px
			color #48cbe8
		.contacts-button
			padding 5px 20px
			background-color #48cbe8
			border-radius 4px
			font-size 19px
			color #fff
			border none
			position relative
			&:after
				content ''
				left 0
				top 0
				width 100%
				height 100%
				position absolute
				background #3ba8c0
				transform scaleX(0)
				transition .4s linear
				transform-origin left center
			&:hover
				&:after
					transform scaleX(1)
			&__text
				z-index 11
				position relative
		.disabled-button
			background-color #849db5
			&:hover
				&:after
					transform scaleX(0)
		&:nth-child(1), &:nth-child(2)
			@media only screen and (max-width: 480px)
				width 100%
		&:last-child
			text-align right
	&__textarea
		width 100%
		.contacts-textarea
			margin-bottom 15px
			min-height 183px
		.contacts-counter
			text-align right
			display block
			color #48cbe8
			font-size 14px
