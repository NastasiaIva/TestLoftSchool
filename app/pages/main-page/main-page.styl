/*---Styles elements for cat----*/
.cat__wrapper
	position relative
	width 100%
	height 100%
	.cat-head
		position absolute
		-webkit-animation rotar-head 3s alternate infinite
		animation rotar-head 3s alternate infinite
		&__ear
			position absolute
			width 50px
			height 40px
			background #212121
			border 5px solid rgb(150, 147, 147)
			border-radius 300px 3000px
			-webkit-transform rotate(33deg)
			transform rotate(33deg)
			margin 5px 25px
			&:before
				content ''
				position absolute
				width 50px
				height 40px
				background #212121
				border 5px solid rgb(150, 147, 147)
				border-radius 3000px 300px
				-webkit-transform rotate(-66deg)
				transform rotate(-66deg)
				margin -26px 35px
		&__content
			position absolute
			width 90px
			height 80px
			border-radius 50% 50% 50% 50% / 60% 60% 40% 40%
			background rgb(150, 147, 147)
			margin 21px 30px
			animation rotar-content 3s alternate infinite
			-webkit-animation rotar-content 3s alternate infinite
	.cat-body
		position absolute
		display block
		width 60px
		height 80px
		border-radius 50% 50% 50% 50% / 60% 60% 40% 40%
		background rgb(150, 147, 147)
		margin 90px 45px
		&:before
			content ''
			display block
			width 80px
			height 55px
			border-radius 100%
			background rgb(150, 147, 147)
			margin 35px -9px
		&__legs
			position absolute
			width 35px
			height 16px
			border-radius 12px
			background rgb(150, 147, 147)
			margin -50px -14px
			&:before
				content ''
				position absolute
				width 35px
				height 16px
				border-radius 12px
				background rgb(150, 147, 147)
				margin 0 55px
	.paw-left, .paw-right
		position absolute
		display block
		width 16px
		height 60px
		border-radius 50% 50% 50% 50% / 60% 60% 40% 40%
		background rgb(150, 147, 147)
		border 1px solid #212121
	.paw-left
		margin 121px 55px
		-webkit-transform rotate(172deg)
		transform rotate(172deg)
	.paw-right
		margin 121px 77px
		-webkit-transform rotate(-172deg)
		transform rotate(-172deg)
	.cat-tail
		position absolute
		width 60px
		height 16px
		border-radius 21px
		background #212121
		margin 132px 12px
		-webkit-transform rotate(50deg)
		transform rotate(50deg)
		z-index -1
	.cat-brush
		position absolute
		width 21px
		height 21px
		border-radius 100%
		background rgb(150, 147, 147)
		-webkit-animation rotar-brush 3s alternate infinite
		animation rotar-brush 3s alternate infinite
		margin 112px 12px
/*---Styles elements for cat-head----*/
.cat-head__content
	.eyes
		margin 30px 7px
		transform rotate(9deg)
		animation rotar-eyes 1.2s alternate infinite
		position absolute
		display block
		width 30px
		height 25px
		border-radius 50% 50% 50% 50% / 60% 60% 40% 40%
		background white
		&:before
			margin -6px 46px
			transform rotate(-18deg)
			content ''
			position absolute
			display block
			width 30px
			height 25px
			border-radius 50% 50% 50% 50% / 60% 60% 40% 40%
			background white
		&__left, &__right
			position absolute
			width 25px
			height 21px
			border-radius 100px
			background black
			&:before
				content ''
				display block
				width 16px
				height 8px
				border-radius 16px 16px 0 0
				border-top 5px solid white
			&:after
				content ''
				display block
				width 12px
				height 6px
				border-radius 0 0 9px 9px
				border-bottom 5px solid gray
		&__left
			margin 1px 2px
			&:before
				transform rotate(-30deg)
				margin 3px
			&:after
				transform rotate(-30deg)
				margin -9px 9px
		&__right
			margin -5px 48px
			&:before
				transform rotate(30deg)
				margin 3px 7px
			&:after
				transform rotate(30deg)
				margin -9px 4px
	.nose
		position absolute
		width 14px
		height 9px
		border-radius 50% 50% 50% 50% / 60% 60% 40% 40%
		background #ff6666
