.about
	&__wrapper
		padding 75px 130px
	&__title
		margin-bottom 16px
	&__text
		font-weight 300
		text-align center
		margin-bottom 34px
	&__main-block
		display flex
	&__main-item
		display flex
		flex-grow 1
		margin-left 18px
		width 50%
		align-items flex-start
		&:first-child
			margin-left 0
	&__main-img
		margin-right 20px
		max-width 140px
	&__main-title
		color #212121
		margin-bottom 8px
	&__main-text
		font-weight 300
	&__main-link
		color #03a9f4
		position relative
		&:after
			position absolute
			content ''
			bottom -3px
			left 0
			right 0
			width 100%
			height 1px
			background #03a9f4
