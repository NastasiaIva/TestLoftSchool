.courses
	padding-bottom 57px
	padding-top 74px
	&__title
		margin-bottom 18px
	&__text
		font-weight 300
		text-align center
		margin-bottom 40px
	&__list
		display flex
		flex-wrap wrap
	&__item
		max-width 300px
		width 100%
		background-color #ffffff
		border-radius 2px
		box-shadow 0 1px 5px 0 rgba(0, 0, 0, .8)
		margin-right 20px
		align-self flex-start
		margin-bottom 23px
		&:hover
			.courses__link:after
				content ''
			.courses__info-link
				color #8cc34b
		&:nth-child(3n)
			margin-right 0
	&__link
		display block
		position relative
		&:after
			content none
			position absolute
			left 0
			right 0
			bottom 0
			width 100%
			height 5px
			background-color #8cc34b
	&__item-img
		display block
	&__item-info
		padding 14px 20px
	&__info-link
		display block
		margin-bottom 10px
		color #212121
	&__item-text
		margin-bottom 10px
		font-weight 300
	&__item-time
		margin-bottom 32px
		font-family 'FontAwesome', sans-serif
		color #b6b6b6
		span
			padding-left 16px
	&__item-icon
		color #000
		position absolute
		margin-top 4px
		width 13px
		height 13px
		border solid 2px #b6b6b6
		border-radius 7px
		&:before
			content ''
			position absolute
			top 5px
			left 2px
			width 4px
			height 1px
			background-color: #b6b6b6
			-webkit-transform-origin 0 0
			transform-origin 0 0
		&:after
			content ''
			position absolute
			top 1px
			left 5px
			width 1px
			height 4px
			background-color #b6b6b6
			-webkit-transform-origin 0 0
			transform-origin 0 0
	&__checkbox-wrapper
		display flex
	&__checkbox
		display inline-block
		position relative
		vertical-align top
		margin-right 18px
		input[type="checkbox"]
			opacity 0
			height 20px
			width 20px
			position absolute
			cursor pointer
			border-radius 2px
			& + label span
				color #ffffff
				font-size 18px
				text-align center
				border solid 2px #b6b6b6
				background-color #ffffff
				height 20px
				width 20px
				vertical-align top
				padding 0
				display inline-block
				cursor pointer
				border-radius 2px
				&:after
					content none
					color #ffffff
					position absolute
					right 5px
					top 5px
					width 8px
					height 4px
					border-bottom solid 2px #fff
					border-left solid 2px #fff
					-webkit-transform rotate(-45deg)
					transform rotate(-45deg)
				&:hover
					background-color #ffffff
			&:checked + label span
				background-color #8cc34b
				border none
				&:after
					content ''
	&__checkbox-text
		font-size 18px
		line-height 1.334
