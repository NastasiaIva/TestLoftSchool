import('sprites/*')
import('helpers/svg-size')
@import 'helpers/variables'
@import 'helpers/mixins'
@import 'helpers/fonts'
@import 'helpers/optimize'

*
	margin 0
	padding 0
	box-sizing border-box
html
	height 100%
	width 100%
body
	background-color #ffffff
	box-sizing border-box
	color #727272
	display table
	font-family 'FiraSans', sans-serif
	height 100%
	margin 0
	min-width 1200px
	padding 0
	position relative
	width 100%
li
	list-style none
a
	text-decoration none
	cursor pointer
p
	font-size 14px
	line-height 1.5
h1, h2
	text-align center
	font-weight 500
	font-size 42px
	color #212121
h3
	font-size 21px
	line-height 1.3
img
	max-width 100%
	max-height 100%
.clearfix:after
	clear both
	content ' '
	display block
	height 0
	visibility hidden
.container
	max-width 1200px
	width 100%
	margin 0 auto
.main-content
	display table-row
	height 100%
